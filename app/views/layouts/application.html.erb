<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
 "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ja" lang="ja"> 
  <head> 
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" /> 
    <meta content="text/css" http-equiv="Content-Style-Type" /> 
    <meta content="text/javascript" http-equiv="Content-Script-Type" /> 
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "jquery.corner" %>
    <%= yield :javascript %>

    <title><%= yield :title %>Meegen - いいことばをシェアしたい！</title>
    <meta content="Meegen - いいことばをシェアしたい！" name="description" /> 
    <meta content="名言, 言霊" name="keywords" /> 
    <meta content="kattton" name="author" /> 
    <meta content="Copyright &copy; kattton." name="copyright" />
    <%= stylesheet_link_tag "reset" %>
    <%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag "jquery-ui-1.7.2.custom" %>
    <%= yield :header %>
  </head> 
  <body>
    <div id="wrapper">
      <div id="header">
        <%= image_tag "/images/logo.png" %>
      </div>
      <div id="container" class="ui-corner-all">
        <%= yield %>
      </div>
      <div id="footer">
      </div>
    </div>
  </body>
</html>


